{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "incremental": true,
    "target": "ES2015",
    "module": "CommonJS",
    "lib": [
      "dom",
      "dom.iterable",
      "es2015",
      "es6",
    ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "rootDir": ".",
    "typeRoots": [
      "./node_modules/@types",
      "src/globals/types"
    ],
    "paths": {
      "App/*": [
        "src/main/app/*"
      ],
      "UI/*": [
        "src/renderer/*"
      ],
      "Assets/*": [
        "assets/*"
      ],
      "@IOC:Provider": [
        "src/main/provider"
      ],
      "Main/*": [
        "src/main/*"
      ],
    }
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll"
  ],
}
