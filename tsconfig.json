{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "incremental": true,
    "target": "ES2021",
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "rootDir": ".",
    "typeRoots": [
      "./node_modules/@types",
      "./src/contracts"
    ],
    "paths": {
      "DTO/*.dto": [
        "main/app/data-transfer-objects/*.dto"
      ],
      "Config/*.config": [
        "main/config/*.config"
      ],
      "Hooks/*.hook": [
        "main/app/hooks/*.hook"
      ],
      "Services/*.service": [
        "main/app/services/*.service"
      ],
      "Interfaces/*.interface": [
        "main/app/interfaces/*.interface"
      ],
      "Contracts/*.contract": [
        "main/contracts/*.contract"
      ],
      "Events/*.event": [
        "main/app/events/*.event"
      ],
      "Models/*.model": [
        "main/database/models/*.model"
      ],
      "Modules/*.module": [
        "main/app/modules/*.module"
      ],
      "Repositories/*.repository": [
        "main/app/repositories/*.repository"
      ],
      "Main/*": [
        "main/*"
      ],
      "App/*": [
        "main/app/*"
      ],
      "@IOC:Provider": [
        "main/provider"
      ],
    }
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll"
  ],
}
