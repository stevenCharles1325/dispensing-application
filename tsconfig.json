{
  "ts-node": {
    "require": [
      "tsconfig-paths/register"
    ]
  },
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictPropertyInitialization": false,
    "incremental": true,
    "target": "ES2021",
    "lib": [
      "dom",
      "es2021"
    ],
    "jsx": "react-jsx",
    "strict": true,
    "sourceMap": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": ".erb/dll",
    "rootDir": ".",
    "paths": {
      "Main/*": [
        "main/*"
      ],
      "Contracts/*": [
        "main/contracts/*"
      ],
      "Events/*": [
        "main/events/*"
      ],
      "Models/*": [
        "main/database/models/*"
      ],
      "Modules/*": [
        "main/modules/*"
      ],
      "Repositories/*": [
        "main/repositories/*"
      ]
    }
  },
  "exclude": [
    "test",
    "release/build",
    "release/app/dist",
    ".erb/dll"
  ],
}
